@model ReportPending

@{
    var formattedReportDate = Model.ReportDate.ToString("yyyy-MM-dd");
}

<div class="modal fade" id="@($"pendingModal{Model.Id}")" tabindex="-1" aria-labelledby="pendingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg modal-fullscreen-lg-down">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body m-2">
                <form asp-action="EncodeFromPending" method="post">
                    <div class="input-wrapper">
                        <input asp-for="ReportDate" type="date" class="input" value="@formattedReportDate" readonly>
                        <label asp-for="ReportDate" class="label"></label>
                    </div>

                    <div class="input-wrapper">
                        <input asp-for="StudentNumber" type="date" class="input" readonly>
                        <label asp-for="StudentNumber" class="label"></label>
                    </div>

                    <div class="input-wrapper">
                        <input asp-for="FirstName" type="text" class="input" readonly>
                        <label asp-for="FirstName" class="label"></label>
                    </div>

                    <div class="input-wrapper">
                        <input asp-for="LastName" type="text" class="input" readonly>
                        <label asp-for="LastName" class="label"></label>
                    </div>

                    <div class="input-wrapper">
                        <input asp-for="College" type="text" class="input" readonly>
                        <label asp-for="College" class="label"></label>
                    </div>

                    <div class="input-wrapper">
                        <input asp-for="CourseYearSection" type="text" class="input" readonly>
                        <label asp-for="CourseYearSection" class="label"></label>
                    </div>

                    <div class="input-wrapper">
                        <input asp-for="Description" type="text" class="input" rows="3" readonly>
                        <label asp-for="Description" class="label"></label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn dark-btn">Accept</button>
                        <button type="button" class="btn" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
