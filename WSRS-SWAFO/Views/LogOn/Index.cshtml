@{
    Layout = "_LogOnLayout";
    bool isOnline = ViewData["isOnline"] as bool? ?? false;
}

<img alt="logo" src="assets/img/logo.png" />
<h1>Login</h1>
@if (isOnline)
{
<button type="button" id="btnSSO" onclick="window.location.href='@Url.Action("SignInWithMicrosoft", "LogOn")'">
<svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" viewBox="0 0 21 21">
<rect x="1" y="1" width="9" height="9" fill="#f25022"/>
<rect x="1" y="11" width="9" height="9" fill="#00a4ef"/>
<rect x="11" y="1" width="9" height="9" fill="#7fba00"/>
<rect x="11" y="11" width="9" height="9" fill="#ffb900"/>
</svg>&nbsp;Login using SSO
</button>
}
else
{
<section>
    <table>
        <tr>
            <td>
                <div class="input-wrapper pt-3">
                    <input class="input" type="email" id="email" placeholder=" " required>
                    <label class="label" for="email">Email Address<span>*</span></label>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-wrapper pt-3">
                    <input class="input" type="password" id="password" placeholder=" " required>
                    <label class="label" for="password">Password<span>*</span></label>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <p class="forgotPass pt-1"><a href="google.com">Forgot Password?</a></p>
            </td>
        </tr>
        <tr>
            <td>
                <button type="submit" id="btnLogin">Log In</button>
            </td>
        </tr>
    </table>
</section>
}

<footer class="pt-4">
    <p><b>Student Welfare and Formation Office Record System</b></p>
    <p>Copyright 2015 De La Salle University - Dasmariñas</p>
</footer>
<script>
    window.addEventListener('offline', function() { location.reload(); });
    window.addEventListener('online', function() { location.reload(); });
</script>
