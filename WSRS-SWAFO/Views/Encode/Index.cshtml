@using WSRS_SWAFO.Data.Enum
@model WSRS_SWAFO.ViewModels.CreateStudentViewModel
@{
    Layout = "_EncodeLayout";
    ViewData["Title"] = "Student Violation";
}

<div id="first-page">
    <h2>Check for an existing violation record</h2>
    <form id="search-student" asp-controller="Encode" asp-action="Search" method="get">
        <input class="search-id" name="searchStudent" autocomplete="firstname" placeholder="Check Student Violation Record" aria-required="true" />
        <button class="iconPad" type="submit">
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g clip-path="url(#clip0_173_68)">
                    <path d="M6.41667 11.0833C8.994 11.0833 11.0833 8.994 11.0833 6.41667C11.0833 3.83934 8.994 1.75 6.41667 1.75C3.83934 1.75 1.75 3.83934 1.75 6.41667C1.75 8.994 3.83934 11.0833 6.41667 11.0833Z" stroke="#1E1F20" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M12.25 12.25L9.71252 9.71249" stroke="#1E1F20" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </g>
                <defs>
                    <clipPath id="clip0_173_68">
                        <rect width="14" height="14" fill="white" />
                    </clipPath>
                </defs>
            </svg>
        </button>
    </form>
    <table id="preview-records">
        <thead>
            <tr>
                <th>Student Number</th>
                <th>Last Name</th>
                <th>First Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ExistingStudents == null || !Model.ExistingStudents.Any())
            {
                <tr>
                    <td colspan="3">No records found.</td>
                </tr>
            }
            else
            {
                foreach (var student in Model.ExistingStudents.ToList())
                {
                    <tr>
                        <td>@student.StudentNumber</td>
                        <td>@student.LastName</td>
                        <td>@student.FirstName</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a class="btn btn-next">
        Next
    </a>
</div>

<form id="create-new" asp-controller="Encode" asp-action="CreateNewStudent">
    <div class="title">
        <a class="btn-back">
            <svg width="32" height="32" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="21.5" cy="21.5" r="20.5" stroke="black" stroke-width="2" />
                <path d="M16 22L24 14" stroke="black" stroke-width="2" stroke-linecap="round" />
                <path d="M16 22L24 30" stroke="black" stroke-width="2" stroke-linecap="round" />
            </svg>

        </a>
        <h2>Create a New Record</h2>
    </div>
    <div class="input-wrapper">
            <input asp-for="NewStudent.StudentNumber" type="number" class="input" autocomplete="StudentNumber" aria-required="true" required />
            <label class="label">Student Number<span>*</span></label>
            <span asp-validation-for="NewStudent.StudentNumber" class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <input asp-for="NewStudent.FirstName" type="text" class="input" autocomplete="firstname" aria-required="true" required/>
        <label class="label">First Name<span>*</span></label>
        <span asp-validation-for="NewStudent.FirstName" class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <input asp-for="NewStudent.LastName" type="text" class="input" autocomplete="LastName" aria-required="true" required/>
        <label  class="label">Last Name<span>*</span></label>
        <span asp-validation-for="NewStudent.LastName" class="text-danger"></span>
    </div>
    <button class="btn btn-next" type="submit">
        Next
    </button>
</form>

<div id="record-violation">
    <div class="title">
        <a class="btn-back">
            <svg width="32" height="32" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="21.5" cy="21.5" r="20.5" stroke="black" stroke-width="2" />
                <path d="M16 22L24 14" stroke="black" stroke-width="2" stroke-linecap="round" />
                <path d="M16 22L24 30" stroke="black" stroke-width="2" stroke-linecap="round" />
            </svg>

        </a>
        <h2>Record Violation</h2>
    </div>
    <div class="input-wrapper">
        <input type="text" class="input" autocomplete="CYS" aria-required="true" />
        <label  class="label">CYS<span>*</span></label>
        <span class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <input type="date" class="input" autocomplete="dateOfCommission" aria-required="true" />
        <label class="label">Date Of Commission<span>*</span></label>
        <span  class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <label  class="label">Classification Of Offense<span>*</span></label>
        <select asp-items="Html.GetEnumSelectList<OffenseClassification>()" class="input" aria-required="true">
            <option value="">-- Select an option --</option>
        </select>
        <span  class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <label  class="label">Nature of Offense<span>*</span></label>
        <select   class="input" aria-required="true">
            <option value="">-- Select an option --</option>
        </select>
        <span class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <input  type="text" class="input" autocomplete="sanction" aria-required="true" />
        <label  class="label">Sanction<span>*</span></label>
        <span class="text-danger"></span>
    </div>
    <div class="input-wrapper">
        <input  type="text" class="input description" autocomplete="description" aria-required="true" />
        <label  class="label">Description</label>
        <span class="text-danger"></span>
    </div>
    <a class="btn btn-submit">
        Submit
    </a>
</div>
<script src="~/js/studentViolation.js" />