@*
    This is the layout used by the Login view.
    It includes Bootstrap, your custom CSS, and optional customHead/scripts sections.
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    @* Optional head section (safe to skip if not defined in view) *@
    @await RenderSectionAsync("customHead", required: false)
</head>
<body>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* Optional scripts section *@
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
